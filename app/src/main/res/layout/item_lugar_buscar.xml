<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_baseline_maps_home_work_24" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView_buscar_name"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:padding="5dp"
                android:text="nombre \n hola"
                android:textColor="@color/coltheme1_verdeOscuro"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView_buscar_localizacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:text="lugar"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/textView_buscar_PalabrasClave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:text="palabras"
                android:textColor="@color/coltheme1_amarilloOcreOscuro"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/textView_buscar_Etiqueta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:paddingEnd="10dp"
                android:paddingBottom="5dp"
                android:text="etiqueta"
                android:textSize="10dp" />
        </LinearLayout>

        <Button
            android:id="@+id/imageButton_viewLugar"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:text=""
            android:textSize="0dp"
            android:background="@color/white"
            android:drawableRight="@drawable/ic_baseline_navigate_next_24"
            android:paddingEnd="10dp"
            android:layout_margin="5dp"
            />




    </LinearLayout>

</androidx.cardview.widget.CardView>